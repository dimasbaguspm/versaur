{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript", "jsx-a11y", "import"],
  "rules": {
    "no-console": "error",
    "no-unused-vars": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "no-debugger": "warn",
    "max-params": ["warn", { "max": 4 }],
    "max-lines": ["warn", { "max": 400 }],
    "no-nested-ternary": "error", // simplify ternaries
    "prefer-template": "error", // use template literals
    "no-lonely-if": "warn", // combine nested if
    "guard-for-in": "warn", // check own properties before iterating
    "no-implicit-coercion": "warn", // explicit type conversions
    "prefer-object-spread": "warn", // use spread over Object.assign
    "import/no-cycle": ["error", { "maxDepth": 999999 }],
    "import/no-default-export": "warn",
    "import/no-self-import": "warn",
    "jsx-a11y/alt-text": "warn",
    "jsx-a11y/aria-props": "warn",
    "jsx-a11y/aria-role": "warn",
    "jsx-a11y/no-redundant-roles": "warn",
    "jsx-a11y/no-noninteractive-tabindex": "warn",
    "jsx-a11y/no-aria-hidden-on-focusable": "warn",
    "jsx-a11y/label-has-associated-control": "warn",
    "jsx-a11y/click-events-have-key-events": "warn", // click handlers need keyboard
    "jsx-a11y/no-static-element-interactions": ["error", { "allowExpressionValues": true }], // static elements shouldn't have onClick
    "jsx-a11y/role-has-required-aria-props": "error", // ARIA roles need required props
    "jsx-a11y/role-supports-aria-props": "warn", // ARIA props validity
    "no-const-enum": "warn",
    "react/exhaustive-deps": "warn",
    "react/display-name": "warn",
    "react/jsx-key": "error",
    "react/jsx-no-useless-fragments": "warn",
    "react/self-closing-comp": "warn",
    "react/no-unstable-nested-components": "warn",
    "react/require-render-return": "error",
    "react/jsx-no-comment-textnodes": "warn"
  },
  "settings": {
    "react": {
      "version": "19.0.0"
    }
  },
  "env": {
    "builtin": true
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".astro/",
    ".storybook/",
    "*.types.generated.ts",
    "*.module.css.d.ts",
    ".next/",
    "coverage/",
    "*.min.js"
  ]
}
