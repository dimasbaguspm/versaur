{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".storybook/",
    "*.types.generated.ts",
    "*.module.css.d.ts",
    ".next/",
    "coverage/",
    "*.min.js",
    "pnpm-lock.yaml"
  ],
  "experimentalSortImports": {
    "order": "asc"
  },
  "printWidth": 120,
  "tabWidth": 2,
  "semi": false,
  "trailingComma": "all"
}
