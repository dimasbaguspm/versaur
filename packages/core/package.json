{
  "name": "@versaur/core",
  "version": "0.0.1",
  "description": "Framework-agnostic CSS core for Versaur Design System",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    "./tokens": {
      "source": "./src/tokens/index.css",
      "default": "./dist/tokens/index.css"
    },
    "./primitive": {
      "types": "./dist/primitive/index.d.ts",
      "source": "./src/components/primitive/index.ts",
      "import": "./dist/primitive.js"
    },
    "./forms": {
      "types": "./dist/forms/index.d.ts",
      "source": "./src/components/forms/index.ts",
      "import": "./dist/forms.js"
    },
    "./blocks": {
      "types": "./dist/blocks/index.d.ts",
      "source": "./src/components/blocks/index.ts",
      "import": "./dist/blocks.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "source": "./src/components/utils/index.ts",
      "import": "./dist/utils.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "format": "oxfmt src --write",
    "format:check": "oxfmt src --check"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.4"
  }
}
