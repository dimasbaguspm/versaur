{
  "name": "versaur-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Versaur Design System - Modern, framework-agnostic UI component library",
  "scripts": {
    "dev": "pnpm --filter docs dev",
    "generate:types": "pnpm --filter @versaur/tooling generate:types",
    "build": "pnpm generate:types && pnpm run build:packages && pnpm run build:docs",
    "build:packages": "pnpm --filter \"./packages/**\" build",
    "build:docs": "pnpm --filter docs build",
    "start": "pnpm --filter docs start",
    "clean": "pnpm -r exec rm -rf dist node_modules .next",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build:packages && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.0"
}
