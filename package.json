{
  "name": "versaur-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Versaur Design System - Modern, framework-agnostic UI component library",
  "scripts": {
    "dev": "pnpm --filter react-doc storybook",
    "dev:docs": "pnpm --filter docs dev",
    "generate:types": "pnpm --filter @versaur/tooling generate:types",
    "build": "pnpm generate:types && pnpm run build:packages && pnpm run build:docs",
    "build:packages": "pnpm --filter \"./packages/**\" build",
    "build:docs": "pnpm --filter react-doc build && pnpm --filter docs build",
    "start": "pnpm --filter docs start",
    "version": "changeset version",
    "release": "pnpm build:packages && changeset publish",
    "publish-packages": "pnpm build:packages && pnpm publish -r",
    "typecheck": "pnpm -r --parallel typecheck",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt . --write",
    "format:check": "oxfmt . --check",
    "prepare": "husky",
    "changeset": "changeset",
    "changeset:add": "changeset add"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.49.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "oxlint"
  },
  "engines": {
    "node": "22",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.0"
}
